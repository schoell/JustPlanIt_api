<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    android:layout_margin="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_progress_id"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:alpha="0.5"
            android:text="id"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/item_progress_activity"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:text="running"
            android:textAlignment="viewStart" />

        <TextView
            android:id="@+id/item_progress_amount"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:text="5"
            android:textAlignment="textEnd" />

        <TextView
            android:id="@+id/item_progress_metric"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:text="km"
            android:textAlignment="viewStart" />

        <TextView
            android:id="@+id/item_progress_date"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:text="23rd, Dec 2023"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/item_progress_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/ic_baseline_delete_24" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>